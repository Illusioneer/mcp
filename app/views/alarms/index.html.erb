<h1>Listing alarms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th>Notify</th>
    <th>Reqs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alarms.each do |alarm| %>
  <tr>
    <td><%= alarm.name %></td>
    <td><%= alarm.category %></td>
    <td><%= alarm.startdate %></td>
    <td><%= alarm.enddate %></td>
    <td><%= alarm.notify %></td>
    <td><%= alarm.reqs %></td>
    <td><%= link_to 'Show', alarm %></td>
    <td><%= link_to 'Edit', edit_alarm_path(alarm) %></td>
    <td><%= link_to 'Destroy', alarm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

