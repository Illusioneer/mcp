<h1>Listing alerts</h1>

<table>
  <tr>
    <th>Alarm</th>
    <th>Status</th>
    <th>Since</th>
    <th>Acknowledged</th>
    <th>Metadata</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alerts.each do |alert| %>
  <tr>
    <td><%= alert.alarm_id %></td>
    <td><%= alert.status %></td>
    <td><%= alert.since %></td>
    <td><%= alert.acknowledged %></td>
    <td><%= alert.metadata %></td>
    <td><%= link_to 'Show', alert %></td>
    <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
    <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

