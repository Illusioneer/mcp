<h1>Listing alerts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Startdate</th>
    <th>Stopdate</th>
    <th>Notifiers</th>
    <th>Host</th>
    <th>Trigger</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alerts.each do |alert| %>
  <tr>
    <td><%= alert.name %></td>
    <td><%= alert.startdate %></td>
    <td><%= alert.stopdate %></td>
    <td><%= alert.notifiers %></td>
    <td><%= alert.host %></td>
    <td><%= alert.trigger %></td>
    <td><%= link_to 'Show', alert %></td>
    <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
    <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

